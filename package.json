{
	"name": "code-client",
	"displayName": "Code Client",
	"description": "Manage your github account from the comfort of your text editor!",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.add-user",
		"onCommand:extension.remove-user",
		"onCommand:extension.change-user",
		"onCommand:extension.edit-user",
		"onCommand:extension.create"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.add-user",
				"title": "Add a GitHub account login"
			},
			{
				"command": "extension.remove-user",
				"title": "Remove a GitHub account login"
			},
			{
				"command": "extension.change-user",
				"title": "Switch the current active account"
			},
			{
				"command": "extension.edit-user",
				"title": "Edit the login info for the active accout"
			},
			{
				"command": "extension.create",
				"title": "Create a repository on github"
			}
		],
		"configuration": {
			"title": "code-client",
			"properties": {
				"code-client.users": {
					"type": "array",
					"default": [],
					"description": "GitHub account credentials"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"@octokit/rest": "^16.28.5"
	}
}
